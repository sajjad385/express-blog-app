<%- include('../partials/head.ejs') %>
<div class="container my-container my-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card card-body">
                <h3>Create A New Account</h3>
                <form action="/playground/validator" method="post">
                    <div class="form-group mt-2">
                        <label for="username">Enter Your User Name <span>(Must be Unique)</span></label>
                        <input type="text" name="username" id="username"
                               class="form-control <%= error.username ? 'is-invalid' : '' %>">
                        <div class="invalid-feedback">
                            <%= error.username && error.username %>
                        </div>
                    </div>
                    <div class="form-group mt-2">
                        <label for="email">Enter Your Valid Email</label>
                        <input type="email" name="email" id="email"
                               class="form-control <%= error.email ? 'is-invalid' : '' %>">
                        <div class="invalid-feedback">
                            <%= error.email && error.email %>
                        </div>
                    </div>
                    <div class="form-group mt-2">
                        <label for="password">Enter A Strong Password</label>
                        <input type="password" name="password" id="password"
                               class="form-control <%= error.password ? 'is-invalid' : '' %>">
                        <div class="invalid-feedback">
                            <%= error.password && error.password %>
                        </div>
                    </div>
                    <div class="form-group mt-2">
                        <label for="confirmPassword">Confirm Your Password</label>
                        <input type="password" name="confirmPassword" id="confirmPassword"
                               class="form-control <%= error.confirmPassword ? 'is-invalid' : '' %>">
                        <div class="invalid-feedback">
                            <%= error.confirmPassword && error.confirmPassword %>
                        </div>
                    </div>
                    <input type="submit" value="Signup" class="btn btn-primary mt-2">
                </form>
                <p class="my-3 text-center">Already have an account ? <a href="/auth/login">Login</a></p>

            </div>
        </div>
    </div>
</div>
<%- include('../partials/footer.ejs') %>
<script></script>
</body>
</html>